<!DOCTYPE html>
<html>
<head>
    <title>Sockets :: Blind</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <script
            src="https://code.jquery.com/jquery-3.3.1.min.js"
            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous"></script>
    <script src="http://10.2.145.42:8080/socket.io/socket.io.js"></script>
</head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col-sm">
                    <h1 class="display-2">Blind page</h1>
                    <hr class="my-4">
                    <p>Request a video call</p>
                </div>
            </div>
            <div class="row">
                <div class="col-sm">
                        <button type="button" class="btn btn-primary">Request</button>
                </div>
            </div>
        </div>
        <script>
            const socket = io.connect('http://10.2.144.127:3000/video');

            socket.emit('register', {type: 'blind'});

            $('button').on('click', () => {
                socket.emit('request');
            });
        </script>
    </body>
</html>